{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MatheBuddyLanguage",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mbl",
          "match": "\\b(EQUATION|EXERCISE|HIDDEN|SUMMARY|LEARNINGOUTCOMES|DEFINITION|PLOT|TABLE)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.mbl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.mbl",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.mbl"
}
